machine sdl.app: {
		
	driver context: {
		sdl.context: true;
	};
		
	chain program: {
		state event.register;
		
		loop center.events: {
			center.customer: true;
			sdl.event.pipe: true;
			state.event.pipe: true {target: event.register;};
		};
		
		loop video: {
			center.customer: true;
			center.video.ecs: true;
			sdl.video: true {
				close_machine:	true;
				sizeable:		true;
				env:			event.register;
				fragshader:		"${FRAGMENT}";
				vtxshader:		"${VERTEX}";
			};
		};
		
	};

};
