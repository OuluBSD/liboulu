machine sdl.app: {
	
	driver context: {
		sdl.context: true;
	};
	
	chain program: {
		
		loop center.image: {
			id: "image";
			center.customer: true;
			center.image.loader: true [][id: "texture0"] {vflip: true; filepath: "3083c722c0c738cad0f468383167a0d246f91af2bfa373e9c5c094fb8c8413e0.png";};
		};
		
		loop center.volume: {
			id: "volume";
			center.customer: true;
			center.volume.loader: true [][id: "texture1"] {vflip: true; filepath: "aea6b99da1d53055107966b59ac5444fc8bc7b3ce2d0bbb6a4a3cbae1d97f3aa.bin";};
		};
		
		loop ogl.fbo.tex0: {
			id: "texture0";
			ogl.customer: true;
			ogl.fbo.image: true [id: "image"][id: "screen"];
		};
		
		loop ogl.fbo.tex1: {
			id: "texture1";
			ogl.customer: true;
			ogl.fbo.volume: true [id: "volume"][id: "screen"];
		};
		
		loop ogl.fbo.screen: {
			id: "screen";
			ogl.customer: true;
			sdl.fbo: true [id: "texture0"; id: "texture1";;;] {buf1: "volume"; fragment: "shaders/toys/simple/simple_volume/stage0.glsl";};
		};
	};
	
};

