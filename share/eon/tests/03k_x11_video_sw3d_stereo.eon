machine glx.app: {
		
	driver context: {
		x11.context: true;
	};
	
	chain program: {
		state event.register;

		loop video: {
			center.customer: true;
			x11.sw.fbo.program: true {
				drawmem:		"false";
				program:		"obj_view";
			};
			x11.sw.video.pipe: true {
				close_machine:	true;
				sizeable:		true;
				env:			event.register;
				type:			stereo;
				fullscreen:				false;
				find.vr.screen:			false;
				shader.vtx.name:		"obj_view";
				shader.frag.name:		"obj_view";
				s2.shader.vtx.name:		"stereo";
				s2.shader.frag.name:	"stereo";
			};
		};
		
	};

};
