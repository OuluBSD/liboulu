state daw.midi.ch: {
	has.converter: false;
	has.side.in: false;
	has.side.out: true;
	customer.test.input: true;
	center.midi.src: true;
	center.midi.side.out.accel: true;
};

state daw.midi.ch.connected.instrument: {
	center.midi.sink: false;
	center.midi.side.out.accel: true;
};

state daw.audio.ch: {
	has.converter: true;
	has.side.in: true;
	has.side.out: true;
	accel.midi.src: false;
	accel.midi.side.in.center: true;
	accel.midi.convert.audio: true;
	accel.midi.convert.audio.test: true;
	accel.audio.side.out: true;
	accel.audio.side.out.center: true;
};

state daw.audio.ch.connected.input: {
	accel.midi.src: false;
	accel.midi.side.in.center: true;
};

state daw.audio.ch.connected.sidechain.out: {
	accel.audio.side.out: true;
	accel.audio.side.out.accel: true;
};

state daw.audio.ch.connected.sidechain.in: {
	accel.audio.side.in: true;
	accel.audio.side.in.accel: true;
};

state daw.audio.ch.connected.hw: {
	accel.audio.side.out: true;
	accel.audio.side.out.center: true;
};

state daw.audio.hw.out: {
	has.converter: false;
	has.side.in: true;
	has.side.out: false;
	customer.test.output: true;
	center.audio.src: false;
	center.audio.side.in.accel: true;
	center.audio.sink.test.realtime: true;
};

machine local: {
	at.host: "main";
	at.host.audio.hw: true;
	
	chain process: {
		loop ch0_midi: {
			req daw.midi.ch;
			req daw.midi.ch.connected.instrument;
		};
		loop ch1_midi: {
			req daw.midi.ch;
			req daw.midi.ch.connected.instrument;
		};
		loop ch0_audio: {
			req daw.audio.ch;
			req daw.audio.ch.connected.input;
		};
		loop ch1_audio: {
			req daw.audio.ch;
			req daw.audio.ch.connected.input;
			req daw.audio.ch.connected.sidechain.out;
		};
		loop ch_sidechain: {
			req daw.audio.ch;
			req daw.audio.ch.connected.sidechain.in;
		};
		loop master_out: {
			req daw.audio.ch;
			req daw.audio.ch.connected.hw;
		};
		loop audio_out: {
			req daw.audio.hw.out;
		};
	};
};

