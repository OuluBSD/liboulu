machine sdl.app: {
	
	chain program: {
		state event.register;
		
		loop ogl.fbo: {
			ogl.customer: true;
			x11.ogl.fbo.program: true {
				drawmem:		"false";
				program:		"obj_view";
				program.arg.use.pbr:	true;
				program.arg.model:		"cgtrader/baseball_ball_01/baseball_ball_01.obj";
				program.arg.tex:		"cgtrader/baseball_ball_01/baseball_ball_01_c.png";
			};
			x11.ogl.fbo.sink: true {
				close_machine:	true;
				sizeable:		true;
				env:			event.register;
				fragment:		"shaders/tests/03j_fragment.glsl";
				vertex:			"shaders/tests/03j_vertex.glsl";
			};
		};
		
	};

};
