machine sdl.app: {
		
	driver context: {
		sdl.context: true;
	};
		
	chain program: {
		state event.register;
		
		loop ogl.fbo.buffer: {
			id: "buffer";
			ogl.customer: true;
			sdl.ogl.fbo.side: true [][id: "screen";;;;] {
				shader.frag.path: "shaders/toys/simple/simple_double/stage1.glsl"
			;};
		};
		
		loop ogl.fbo.screen: {
			id: "screen";
			ogl.customer: true;
			sdl.fbo: true [id: "buffer";;;;][] {
				shader.frag.path: "shaders/toys/simple/simple_double/stage0.glsl";
			};
		};
		
		loop audio: {
			center.customer: true;
			center.audio.src.dbg_generator: true {waveform: "noise";};
			sdl.audio: true;
		};
	};

};

