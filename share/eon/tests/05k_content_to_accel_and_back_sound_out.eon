machine sdl.app: {
		
	driver context: {
		sdl.context: true;
	};
		
	chain program: {
		
		loop audio.in: {
			id: "audio_gen";
			center.customer: true;
			center.audio.src.dbg_generator: true;
			center.audio.side.src.center.user: true [][id: "audio_conv_in"];
		};

		loop ogl.fbo.audio.conv.in: {
			id: "audio_conv_in";
			ogl.customer: true;
			sdl.ogl.center.fbo.audio: true [id: "audio_gen"][id: "audio_fx"];
		};
		
		loop ogl.fbo.audio.buffer: {
			id: "audio_fx";
			ogl.customer: true;
			sdl.ogl.fbo.side: true [id: "audio_conv_in";;;;][id: "audio_conv_out";;;;] {
				type: "audio";
				filepath: "shaders/toys/simple/simple_sound_mixer/stage1.glsl";
				retarded_local_time: true;
			};
		};
		
		loop ogl.fbo.audio.conv.out: {
			id: "audio_conv_out";
			ogl.customer: true;
			sdl.ogl.fbo.center.audio: true [id: "audio_fx"][id: "audio_out"];
		};
		
		loop audio.out: {
			id: "audio_out";
			center.customer: true;
			center.audio.side.sink.center.user: true [id: "audio_conv_out"];
			sdl.audio: true;
		};
		
		loop ogl.fbo.screen: {
			id: "screen";
			ogl.customer: true;
			sdl.fbo.standalone: true {filepath: "shaders/toys/simple/simple_sound_mixer/stage0.glsl";};
		};
		
	};
	
};

