machine ecs.app:
    pass

engine ecs.dummy:
    system rendering:
        dummy = true
    system entity.store
    system component.store
    system events
    system physics:
        //log: debug
    
    pool world:
        entity ground:
            comp transform3
            comp model:
                builtin = plane
            
            comp physics:
                bind = physics
                test.fn = fixed
        
        entity ball:
            comp transform3
            comp body
            comp model:
                builtin = sphere
            
            comp physics:
                bind = physics
                test.fn = do.circle
        
        entity player:
            comp transform3:
                x = 0
                y = 0
                z = 6
            comp viewable
            comp viewport
            comp camera.chase:
                target = world.ball
                log = test
            comp physics:
                bind = physics
                test.fn = fixed
