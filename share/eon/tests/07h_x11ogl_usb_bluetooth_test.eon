// executable must have 'capabilities' set to work properly in user space
//		setcap 'cap_net_raw,cap_net_admin+eip' /path/to/EcsShell

// or set capability permission to user in /etc/security/capability.conf
//		cap_net_raw			user
// add to /etc/pam.d/system-auth following line
//		auth        optional					 pam_cap.so debug



machine app: {
	
	chain program: {
		state event.register;
		
		loop center.bluetooth.events: {
			center.customer: true;
			bluetooth.holo.events: true {
				remote.port: 3214;
				controller.left.idx: 0;
			};
			state.event.pipe: true {
				target: event.register;
			};
		};
		
		loop ogl.fbo: {
			ogl.customer: true;
			x11.ogl.fbo.standalone: true {
				close_machine:	true;
				fullscreen:		true;
				find.vr.screen:	true;
				env:			event.register;
				fragment:		"shaders/toys/stereo/mario_cross_eye_3d/stage0.glsl";
			};
		};
		
	};

};
