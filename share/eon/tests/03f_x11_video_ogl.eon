machine sdl.app: {
	
	chain program: {
		state event.register;
		
		loop ogl.video: {
			ogl.customer: true;
			glx.fbo.pipe: true {
				drawmem:		"false";
				program:		"obj_view";
			};
			glx.fbo.sink: true {
				close_machine:	true;
				sizeable:		true;
				env:			event.register;
				fragment:		"shaders/tests/03f_fragment.glsl";
				vertex:			"shaders/tests/03f_vertex.glsl";
			};
		};
		
	};

};
