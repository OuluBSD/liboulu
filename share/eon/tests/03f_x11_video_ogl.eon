machine sdl.app: {
	
	driver context: {
		x11.context: true;
	};
	
	chain program: {
		state event.register;
		
		loop ogl.fbo: {
			ogl.customer: true;
			x11.ogl.fbo.program: true {
				drawmem:		"false";
				program:		"obj_view";
				shader.default.frag.path:		"shaders/tests/03f_fragment.glsl";
				shader.default.vtx.path:		"shaders/tests/03f_vertex.glsl";
			};
			x11.ogl.fbo.sink: true {
				close_machine:	true;
				sizeable:		true;
				env:			event.register;
			};
		};
		
	};

};
