machine sdl.app: {
	
	chain program: {
		state event.register;
		
		loop center.events: {
			center.customer: true;
			x11.ogl.holo.events: true {
				device.hmd.idx: 0;
				device.left.idx: 0;
				device.right.idx: 0;
			};
			state.event.pipe: true {
				target: event.register;
			};
		};
		
		loop ogl.fbo: {
			ogl.customer: true;
			x11.ogl.fbo.standalone: true {
				close_machine:	true;
				fullscreen:		true;
				find.vr.screen:	true;
				env:			event.register;
				fragment:		"shaders/toys/stereo/mario_cross_eye_3d/stage0.glsl";
			};
		};
		
	};

};
