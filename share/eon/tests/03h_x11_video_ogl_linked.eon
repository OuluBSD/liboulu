machine glx.app:
	
	driver context:
		x11.context = true
	
	chain program:
		state event.register

		loop ogl.fbo:
			ogl.customer
			x11.ogl.fbo.pipe:
				shader.frag.path =	"shaders/toys/simple/simple_double/stage1.glsl"
			
			x11.ogl.fbo.sink:
				close_machine =		true
				sizeable =			true
				env =				event.register
				shader.frag.path =	"shaders/toys/simple/simple_double/stage0.glsl"
				recv.data =			false
