machine glx.app: {
		
	chain program: {
		state event.register;

		loop ogl.fbo: {
			ogl.customer: true;
			x11.ogl.fbo.pipe: true {
				filepath:		"shaders/toys/simple/simple_double/stage1.glsl";
			};
			x11.ogl.fbo.sink: true {
				close_machine:	true;
				sizeable:		true;
				env:			event.register;
				filepath:		"shaders/toys/simple/simple_double/stage0.glsl";
			};
		};
	};

};

