machine app: {
	
	driver context: {
		x11.context: true;
	};
	
	chain program: {
		state event.register;
		
		loop ogl.fbo: {
			ogl.customer: true;
			x11.ogl.fbo.standalone: true {
				close_machine:	true;
				fullscreen:		true;
				find.vr.screen:	true;
				env:			event.register;
				shader.frag.path:		"shaders/toys/stereo/mario_cross_eye_3d/stage0.glsl";
			};
		};
		
	};

};
