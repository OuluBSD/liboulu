machine sdl.app: {
		
	driver context: {
		sdl.context: true;
	};
		
	chain program: {
		state event.register;

		loop ogl.fbo: {
			ogl.customer: true;
			sdl.ogl.fbo.pipe: true {
				shader.frag.path:		"shaders/toys/simple/simple_double/stage1.glsl";
			};
			sdl.fbo.sink: true {
				close_machine:	true;
				sizeable:		true;
				env:			event.register;
				shader.frag.path:		"shaders/toys/simple/simple_double/stage0.glsl";
			};
		};
	};

};

