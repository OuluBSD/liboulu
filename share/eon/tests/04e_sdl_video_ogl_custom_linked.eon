machine sdl.app:
		
	driver context:
		sdl.context
	
	chain program:
		state event.register

		loop ogl.fbo:
			ogl.customer
			sdl.ogl.fbo.pipe:
				shader.frag.path = "shaders/toys/simple/simple_double/stage1.glsl"
			
			sdl.fbo.sink:
				close_machine =		true
				sizeable =			true
				env =				event.register
				shader.frag.path =	"shaders/toys/simple/simple_double/stage0.glsl"
				recv.data =			false
