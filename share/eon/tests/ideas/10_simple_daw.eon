#include "daw.eon"


machine local: {
	at.host: "main";
	at.host.audio.hw: true;
	
	chain process: {

		chain ch0: {
			loop midi: {
				req daw.midi.ch;
				req daw.midi.ch.connected.instrument;
			};
			loop accel.audio: {
				req daw.instrument.ch;
				req daw.instrument.ch.connected.input;
				req daw.audio.ch.connected.audio.out;
			};
		};
		chain ch1: {
			loop midi: {
				req daw.midi.ch;
				req daw.midi.ch.connected.instrument;
			};
			loop accel.audio: {
				req daw.instrument.ch;
				req daw.instrument.ch.connected.input;
				req daw.audio.ch.connected.audio.out;
				req daw.audio.ch.connected.sidechain.out;
			};
		};
		chain ch2: {	
			loop accel.ch_sidechain: {
				req daw.audio.ch;
				req daw.audio.ch.connected.sidechain.in;
				req daw.audio.ch.connected.audio.out;
			};
		};
		chain ch3: {
			loop accel.master_out: {
				req daw.audio.ch;
				req daw.audio.ch.connected.audio.in;
				req daw.audio.ch.connected.hw;
			};
		};
		loop audio_out: {
			req daw.audio.hw.out;
		};
	};
};

