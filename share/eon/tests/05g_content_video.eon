	driver context: {
		sdl.context: true;
	};
	
	chain program: {
		loop center.video: {
			id: "cam";
			center.customer: true;
			center.video.loader: true [][id: "texture"] {vflip: "true"; filepath: "videos/35c87bcb8d7af24c54d41122dadb619dd920646a0bd0e477e7bdc6d12876df17.webm";};
		};
		
		loop ogl.fbo.tex: {
			id: "texture";
