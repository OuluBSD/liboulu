machine sdl.app: {
		
	driver context: {
		sdl.context: true;
	};
		
	chain program: {
		
		loop ogl.fbo: {
			ogl.customer: true;
			sdl.fbo.standalone: true {fragment: "shaders/toys/simple/simple_single/stage0.glsl";};
		};
		
		loop audio: {
			center.customer: true;
			center.audio.src.dbg_generator: true {waveform: "noise";};
			sdl.audio: true;
		};
	};

};

