machine sdl.app: {
		
	driver context: {
		sdl.context: true;
	};
		
	chain program: {
		
		loop ogl.fbo.buffer: {
			id: "buffer";
			ogl.customer: true;
			ogl.fbo.source: true [][id: "screen";;;;] {filepath: "shaders/toys/simple_double/stage1.glsl";};
		};
		
		loop ogl.fbo.screen: {
			id: "screen";
			ogl.customer: true;
			sdl.fbo: true {filepath: "shaders/toys/simple_double/stage0.glsl";};
		};
		
		loop audio: {
			center.customer: true;
			center.audio.src.dbg_generator: true {waveform: "noise";};
			sdl.audio: true;
		};
	};

};

