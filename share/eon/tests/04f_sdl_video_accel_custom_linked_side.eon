machine sdl.app:
		
	driver context:
		sdl.context
	
	chain program:
		
		loop ogl.fbo.buffer:
			id = "buffer"
			ogl.customer
			ogl.fbo.source[][id == "screen"]:
				filepath = "shaders/toys/simple/simple_double/stage1.glsl"
		
		loop ogl.fbo.screen:
			id = "screen"
			ogl.customer
			sdl.fbo[id == "buffer"][]:
				filepath = "shaders/toys/simple/simple_double/stage0.glsl"
		
		loop audio:
			center.customer
			center.audio.src.dbg_generator:
				waveform = "noise"
			sdl.audio
