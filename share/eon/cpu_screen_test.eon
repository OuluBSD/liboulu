
machine sdl.app:
	
	driver context:
		sdl.context
	
	chain program:
		
		state event.register
		
		loop center.events:
			center.customer = true
			sdl.event.pipe = true
			state.event.pipe = true: target = event.register
		
		loop center.stage0.image:
			center.customer
			sdl.video.standalone:
				close_machine =			true
				sizeable =				true
				env =					event.register
				shader.frag.name =		"simple_single"

